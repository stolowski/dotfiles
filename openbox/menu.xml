<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal">
    <action name="Execute"><execute>xfce4-terminal</execute></action>
  </item>
  <item label="Web browser">
    <action name="Execute"><execute>firefox</execute></action>
  </item>
  <item label="File manager">
    <action name="Execute"><execute>thunar</execute></action>
  </item>
  <item label="Vim">
    <action name="Execute"><execute>gvim</execute></action>
  </item>
  <separator />
  <item label="Deadbeef">
    <action name="Execute"><execute>deadbeef</execute></action>
  </item>
  <separator />
  <menu id="config-menu" label="Config">
      <item label="ObConf">
        <action name="Execute"><execute>obconf</execute></action>
      </item>
      <item label="Reconfigure">
        <action name="Reconfigure" />
      </item>
      <item label="Restart">
        <action name="Restart" />
      </item>
  </menu>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
