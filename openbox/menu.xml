<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal">
    <action name="Execute"><execute>xfce4-terminal</execute></action>
  </item>
  <item label="Web browser">
    <action name="Execute"><execute>google-chrome</execute></action>
  </item>
  <item label="File manager">
    <action name="Execute"><execute>thunar</execute></action>
  </item>
  <item label="Vim">
    <action name="Execute"><execute>gvim</execute></action>
  </item>
	
  <item label="Leafpad">
    <action name="Execute"><execute>leafpad</execute></action>
  </item>
 
  <separator />
  <menu id="mmedia-menu" label="Multimedia">
	  <item label="Volume control">
		  <action name="Execute"><execute>pavucontrol</execute></action>
	  </item>
	  <separator />
	  <item label="Deadbeef">
		  <action name="Execute"><execute>deadbeef</execute></action>
	  </item>
	  <item label="VLC">
		  <action name="Execute"><execute>vlc</execute></action>
	  </item>
	  <item label="UMPlayer">
		  <action name="Execute"><execute>umplayer</execute></action>
	  </item>
	  <item label="SMPlayer">
		  <action name="Execute"><execute>smplayer</execute></action>
	  </item>
  </menu>
  <separator />

  <menu id="config-keyboard" label="Keyboard">
      <item label="GB">
		  <action name="Execute"><execute>setxkbmap -layout gb</execute></action>
      </item>
      <item label="PL">
		  <action name="Execute"><execute>setxkbmap -layout pl</execute></action>
      </item>
  </menu>

  <menu id="config-screensaver" label="Screensaver">
	  <item label="Disable">
		  <action name="Execute"><execute>xscreensaver-command -exit</execute></action>
	  </item>
	  <item label="Enable">
		  <action name="Execute"><execute>xscreensaver -no-splash</execute></action>
	  </item>
	  <item label="Activate">
		  <action name="Execute"><execute>xscreensaver-command -activate</execute></action>
	  </item>
	  <item label="Prefs">
		  <action name="Execute"><execute>xscreensaver-command -prefs</execute></action>
	  </item>
  </menu>

  <menu id="config-menu" label="Config">
      <item label="ObConf">
        <action name="Execute"><execute>obconf</execute></action>
      </item>
      <item label="Reconfigure">
        <action name="Reconfigure" />
      </item>
      <item label="Restart">
        <action name="Restart" />
      </item>
  </menu>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
